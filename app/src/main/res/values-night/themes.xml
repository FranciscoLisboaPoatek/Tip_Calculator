<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tip_Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
        <item name="radioButtonStyle">@style/Widget.Tip_Calculator.CompoundButton.RadioButton</item>
        <item name="switchStyle">@style/Widget.Tip_Calculator.CompoundButton.Switch</item>
    </style>
    <style name="Secondary.Theme.Tip_Calculator" parent="Base.Theme.Tip_Calculator">
        <item name="colorPrimary">@color/purple_200</item>
    </style>

</resources>